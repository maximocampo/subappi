	<section class="subastas">
		
		<div class="container">

			<div class="row" style="display: flex;align-items: center;margin:3rem 0;">
				
				<div class="col-lg-5 col-md-6 col-xs-12"><h3>Busque una subasta y dé la mejor puja</h3></div>
				<div class="col-lg-7 col-md-6 col-xs-12">
					
					<form action="get">
						<div class="row" style="display: flex;align-items: center;margin:3rem 0;">
							<div class="col-md-7">
								<select class="form-control" value="automovil">
									<option selected disabled="">Seleccione una categoría</option>
									<option value="automovil">Automóviles</option>
									<option value="electronica">Electrónica</option>
									<option value="moda">Moda</option>
								</select>
							</div>
							<div class="col-md-5">
								<input type="submit" value="Buscar" class="form-control btn btn-card">
							</div>
						</div>
					</form>
				</div>
			</div>
			
			<div class="row">
				
				{{#each product}}
				<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 productcard">
				
					<div class="card card-inicio">
					  {{#if this.image.[0]}}
								  <img class="card-img-top" src="{{this.image.[0]}}" alt="Tu producto">
									{{else }}
									<img class="card-img-top" src="http://res.cloudinary.com/otnielitowsky/image/upload/v1525969636/foto-no-disponible.jpg" alt="Pon una foto de tu producto">
									{{/if}}
					  <div class="card-body">
							<div class="clockdiv">
											<input class="timeofprod" value="{{time}}" type="text" hidden>
              				<h4 class="timer">
                				<span class='days'></span>
                				:
                				<span class='hours'></span>
                				:
                				<span class='minutes'></span>
                				:
                				<span class='seconds'></span>
               				</h4>
          			  	</div>
					    <div class="card-lider">
					    	<h4 class="card-title">{{lider}}</h4>
					    	<p>{{price}}</p>
					    </div>
					    <div style='height:10rem;overflow:hidden;margin-bottom:4rem'>
											<h3>{{this.name}}</h3>
											<p class="card-text">
								      {{this.description}}
								    	</p>
										</div>
					    <a href="/auction/{{_id}}" class="btn btn-primary btn-card">ver oferta</a>
					  </div>
					</div>
					
				</div>
				{{/each}}

	</section>

	

	<section class="info">
		
		<div class="container">

			<div class="row title">
				<div class="col-xs-12 center">
					<h2>¡Es tiempo de jugar!</h2>
					<p>Haz tu subasta y sube de nivel.</p>
					<a href="#" class="btn btn-primary btnCta btn-card" data-toggle="modal" data-target="#nuevaSubasta">Subastar</a>
				</div>
			</div>

			<div class="modal" id="nuevaSubasta" tabindex="-1" role="dialog" aria-labelledby="exampleModalVerticalLabel" aria-hidden="true">
			    <div class="modal-dialog" role="document">
				    <div class="modal-content">
				      	<div class="modal-header">
				        	<h5 class="modal-title" id="exampleModalVerticalLabel">Nueva subasta</h5>
				        	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				          		<span aria-hidden="true">&times;</span>
				        	</button>
				      	</div>
				      	<div class="modal-body">
				        	<form action="post" class="form-group" enctype="multipart/data">

								
								<input type="text" placeholder="Título de la subasta" class="form-control">			
								
								<select class="form-control" value="automovil">
									<option value="automovil">Automóviles</option>
									<option value="electronica" selected>Electrónica</option>
									<option value="moda">Moda</option>
								</select>
								<input type="time" class="form-control" style="height: 100px">
								
								<input type="number" placeholder="Valor de la puja" class="form-control">

								<textarea rows="3" placeholder="Descripción del producto" class="form-control"></textarea>

								<input type="file" class="form-control-file" multiple>
								




				        	</form>
				      	</div>
				      	<div class="modal-footer">
				        	<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
				        	<button type="button" class="btn btn-primary">¡Subastar!</button>
				      	</div>
				    </div>
				</div>
			</div>

		</div>

	</section>

